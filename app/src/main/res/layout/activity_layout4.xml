<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout4"
    android:background="@drawable/fondo">

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="625dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloDatos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Por favor, verifique sus datos antes de finalizar su pedido"
            android:textColor="@color/gris"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout18"
        android:layout_width="185dp"
        android:layout_height="218dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="340dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

        <TextView
            android:id="@+id/totHamburguesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Total Hamburguesas"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totPropina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Propina"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totAdicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Adiciones"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Descuento"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Dirección"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/totNeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textColor="@color/naranja"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout19"
        android:layout_width="83dp"
        android:layout_height="219dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="340dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout18"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

        <TextView
            android:id="@+id/montoHamburguesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/montoPropina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/montAdicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/montoDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/montoDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:hint="..."
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/montoNeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="0"
            android:textColor="@color/naranja"
            android:textColorHint="@color/naranja"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="310dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout18">

        <ImageButton
            android:id="@+id/btnVer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/rojo"
            app:srcCompat="@android:drawable/ic_menu_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="102dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="315dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout20"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout19">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click aquí para visualizar datos"
            android:textColor="@color/gris"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

        <Button
            android:id="@+id/btnComprar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="COMPRAR"
            android:textColor="@color/gris"
            android:textSize="10dp"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/naranja"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20">

        <Button
            android:id="@+id/btnCancelar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/rojo"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout23"
        android:layout_width="224dp"
        android:layout_height="128dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="90dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20">

        <TextView
            android:id="@+id/tiempoLlegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tiempo estimado de llegada:"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/respLlegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/gris"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/preparacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Su pedido ya está en preparación"
            android:textColor="@color/black"
            android:textSize="17dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="96dp"
        android:layout_height="70dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout23"
        app:srcCompat="@android:drawable/presence_away" />


</androidx.constraintlayout.widget.ConstraintLayout>